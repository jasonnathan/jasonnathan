{{#each posts}}
  <p align="left">
    <a
      href="{{url}}"
      title="{{title}}"
    >
      <img
        src="{{coverImage.url}}"
        alt="{{title}}"
        width="150px"
        align="right"
      />
    </a>
    <a
      href="{{url}}"
      title="{{title}}"
    >
      <strong>{{title}}</strong>
    </a>
    <div><strong>{{publishedAt}}</strong>
    <br />
    {{description}}
  </p>
  <br />
  <br />
{{/each}}